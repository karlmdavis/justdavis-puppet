# Can be used to install and configure PostgreSQL and DBs for it.
mod 'puppetlabs/postgresql'

# Can be used to install and configure Sonar.
mod 'sonar',
   :git => 'https://github.com/karlmdavis/puppet-sonar'

# Can be used to install Oracle JDKs.
# Need to use Git HEAD, because we need the as-yet-unreleased 'default_java' parameter.
mod 'tylerwalts/jdk_oracle',
   :git => 'https://github.com/tylerwalts/puppet-jdk_oracle'

# Can be used to configure Java keystores. 
mod 'puppetlabs/java_ks'
